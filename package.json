{
  "name": "vscode-open",
  "displayName": "Open",
  "description": "Opens the current file with the default for the OS",
  "version": "0.2.2",
  "icon": "open.png",
  "publisher": "sandcastle",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sandcastle/vscode-open"
  },
  "keywords": [
    "open",
    "file",
    "browser",
    "display",
    "vscode"
  ],
  "homepage": "https://github.com/sandcastle/vscode-open",
  "bugs": {
    "url": "https://github.com/sandcastle/vscode-open/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/main",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-open.openFileWithDefaultApplication",
        "title": "Open with default application"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-open.openFileWithDefaultApplication",
          "group": "navigation",
          "when": "explorerResourceIsFolder == false"
        }
      ],
      "commandPalette": [
        {
          "command": "vscode-open.openFileWithDefaultApplication",
          "when": "resourceSet"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscode-open.openFileWithDefaultApplication",
        "key": "ctrl+alt+o",
        "mac": "cmd+alt+o"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "npm run esbuild-base -- --sourcemap",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package"
    },
  "devDependencies": {
    "@types/node": "^12.14.1",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "esbuild": "^0.17.10",
    "eslint": "^7.22.0",
    "typescript": "^4.2.3",
    "@vscode/vsce": "^2.15.0",
    "node": "^18.17.1"
  },
  "dependencies": {
    "open": "^8.4.2"
  },
  "volta": {
    "node": "18.17.1"
  }
} 
